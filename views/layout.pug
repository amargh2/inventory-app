doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link (rel='stylesheet', href='/stylesheets/style.css')>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Slabo+27px&display=swap" rel="stylesheet"> 
    body
      div(class='d-flex justify-content-center pb-3')
        h2 !{title}
      div(class='container-fluid')
      div(class='row')
        div(class='col-sm-2')
          block sidebar
            div(class='sidebar-nav p-2')
              div(class='p-1 d-flex' style='font-size:1.2rem')
                a(href='/catalog' class='text-decoration-none') 
                  div(class='d-flex')
                    i(class="bi bi-house")
                    p Home
              div(class='p-1 d-flex' style='font-size:1.2rem')
                a(href='/catalog/products' class='text-decoration-none') 
                  div(class='d-flex')
                    i(class="bi bi-basket2")
                    p Products
              div(class='p-1 d-flex' style='font-size:1.2rem')
                a(href='/catalog/categories' class='text-decoration-none') 
                  div(class='d-flex')
                    i(class="bi bi-folder")
                    p Categories
              div(class='p-1 d-flex' style='font-size:1.2rem')
                a(href='/catalog/products/create' class='text-decoration-none') 
                  div(class='d-flex gap-1')
                    i(class="bi bi-bag-plus")
                    p Add an item
              div(class='p-1 d-flex' style='font-size:1.2rem')
                a(href='/catalog/categories/create' class='text-decoration-none') 
                  div(class='d-flex')
                    i(class="bi bi-folder-plus")
                    p Add a category
        div(class='col-sm-10')
          block content
