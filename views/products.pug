extends layout

block content
  div(class='d-flex justify-content-center')  
    h1(class='')= title
  div(class='row p-3')
  div(class='row')
    div(class='col d-flex flex-column')
      a(href='/products') Our Products
      a(href='/categories') Browse Categories
    div(class='col d-flex flex-column justify-content-center')  
      p Products in the Store:
      ul 
        each item in item_list
          li= item
    div(class='col')