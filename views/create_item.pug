extends layout

block content
  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name of item' name='name' required='true' )
    div.form-group
      label(for='description') Item Description:
      input#description.form-control(type='textarea', placeholder='Description' name='description' required='true')
    div.form-group
      label(for='price') Item Price:
      input#price.form-control(type='text', placeholder='Price' name='price' required='true') 
    .form-group 
      label(for ='category') Choose item category: 
      select#category.form-control(type='select', placeHolder ='category', name ='category')
          each category in categories
            option= category.name
    .form-group 
      label(for='number_in_stock') Quantity of item to add: 
      select#number_in_stock.form-control(type='select', name='number_in_stock')
        option 1
        option 2 
        option 3 
        option 4
        option 5
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
