extends layout

block content
  form(method='POST' action='')
    div.form-group
      label(for='name') Category Name:
      input#name.form-control(type='text', placeholder='Name of item' name='name' required='true' )
    div.form-group
      label(for='description') Category Description:
      input#description.form-control(type='textarea', placeholder='Description' name='description' required='true')
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg